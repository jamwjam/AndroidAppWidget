<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:columnCount="3"
    android:rowCount="4">

    <ViewFlipper
        android:id="@+id/ViewFlipper"

        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:autoStart="true"
        android:flipInterval="3000"
        android:inAnimation="@anim/flip_in_next"
        android:outAnimation="@anim/flip_out_next"
        android:layout_columnSpan="3">

        <ImageButton
            android:id="@+id/vfButton1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:background="#784b0082"
            android:layout_centerHorizontal="true" >
        </ImageButton>

        <ImageButton
            android:id="@+id/vfButton2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:background="#787cfc00"
            android:layout_centerHorizontal="true" >
        </ImageButton>

        <ImageButton
            android:id="@+id/vfButton3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:background="#781e90ff" >
        </ImageButton>

        <ImageButton
            android:id="@+id/vfButton4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:background="#78ffff00"
            android:layout_centerHorizontal="true"
            android:text="Flipper Content 1" >
        </ImageButton>

        <ImageButton
            android:id="@+id/vfButton5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF"
            android:background="#78466f82"
            android:layout_centerHorizontal="true" >
        </ImageButton>

    </ViewFlipper>

    <Button
        android:id="@+id/button_down"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_row="3"
        android:layout_column="1"
        android:text="Next" />


</GridLayout>